@model Shelfish.Models.BookshelfModels.AddAudiobookToShelfViewModel

@{
    ViewBag.Title = "AddBooks";
}

<h2>Add Audiobooks to Shelf</h2>
<hr />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Audiobooks To Add</h4>
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SelectedShelfId)

        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(b => b.SelectedAudiobookId, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(b => b.SelectedAudiobookId, Model.AudiobookListItems, "--Select--", new { @class = "form-control" })
                    @Html.ValidationMessageFor(b => b.SelectedAudiobookId, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <br />

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<br />
<div>
    @Html.ActionLink("Back To Details", "Details", new { id = Model.SelectedShelfId })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}