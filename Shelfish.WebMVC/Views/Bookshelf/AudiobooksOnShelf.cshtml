@model IEnumerable<Shelfish.Models.ViewModels.AudiobookOnShelfRecordView>

@{
    ViewBag.Title = "AudiobooksOnShelf";
}

<h2>Audiobooks On Shelf</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AudiobookId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @Html.HiddenFor(modelItem => item.RecordKeeperId)
            @Html.HiddenFor(modelItem => item.ShelfId)
            <td>
                @Html.DisplayFor(modelItem => item.AudiobookId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorName)
            </td>
            <td>
                @Html.ActionLink("Delete Audiobook", "DeleteAudiobook", new { id = item.RecordKeeperId }) |
                @Html.ActionLink("Return to Details", "Details", new { id = item.ShelfId })
            </td>
        </tr>
    }

</table>

<br />

@Html.ActionLink("Return to List", "Index")
