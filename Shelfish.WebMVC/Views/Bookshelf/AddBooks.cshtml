@model Shelfish.Models.BookshelfModels.BookshelfDetail

@{
    ViewBag.Title = "AddBooks";
}

<h2>AddBooks</h2>
<hr />
@Html.DisplayFor(model => model.ShelfName)

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Books To Add</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ShelfId)

        <div class="form-horizontal">
            <div class="form-group">
                @Html.DropDownList("BookId", (IEnumerable<SelectListItem>)ViewBag.BookId, "--Select--", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to Details", "Details")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}