@model Shelfish.Models.BookModels.BookDetail

@{
    ViewBag.Title = "Delete";
}

<h2>Delete a Book</h2>
<br />
<h3>Are you sure you want to delete this book?</h3>

<div>
    
    <hr />
    <div class="row">
        <div class="col-md-6">

            <p>
                <strong>
                    @Html.DisplayNameFor(model => model.BookId)
                </strong>
                <br />
                @Html.DisplayFor(model => model.BookId)
            </p>

            <br />

            <p>
                <strong>
                    @Html.DisplayNameFor(model => model.Title)
                </strong>
                <br />
                @Html.DisplayFor(model => model.Title)
            </p>

            <br />

            <p>
                <strong>
                    @Html.DisplayNameFor(model => model.SeriesTitle)
                </strong>
                <br />
                @if (Model.SeriesTitle == null)
                {
                    <text>N/A</text>
                }
                else
                {
                    @Html.DisplayFor(model => model.SeriesTitle)
                }
            </p>

            <br />

            <p>
                <strong>
                    @Html.DisplayNameFor(model => model.AuthorName)
                </strong>
                <br />
                @Html.DisplayFor(model => model.AuthorName)
            </p>

            <br />

            <p>
                <strong>
                    @Html.DisplayNameFor(model => model.Isbn)
                </strong>
                <br />
                @Html.DisplayFor(model => model.Isbn)
            </p>

        </div>
        <div class="col-md-6">


            <p>
                <strong>
                    @Html.DisplayNameFor(model => model.Rating)
                </strong>
                <br />
                @Html.DisplayFor(model => model.Rating)
            </p>

            <br />

            <p>
                <strong>
                    @Html.DisplayNameFor(model => model.Genre)
                </strong>
                <br />
                @Html.DisplayFor(model => model.Genre)
            </p>

            <br />

            <p>
                <strong>
                    @Html.DisplayNameFor(model => model.Language)
                </strong>
                <br />
                @Html.DisplayFor(model => model.Language)
            </p>

            <br />

            <p>
                <strong>
                    @Html.DisplayNameFor(model => model.Publisher)
                </strong>
                <br />
                @Html.DisplayFor(model => model.Publisher)
            </p>

            <br />

            <p>
                <strong>
                    @Html.DisplayNameFor(model => model.IsEbook)
                </strong>
                <br />
                @if (Model.IsEbook)
                {<text>Yes</text>}
            else
            {<text>No</text>}
            </p>

        </div>
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
